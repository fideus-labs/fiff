{
  "name": "@fideus-labs/fiff",
  "version": "0.5.0",
  "description": "Present TIFF files as a zarrita.js Zarr store following the NGFF OME-Zarr data model",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "LICENSE.txt"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/fideus-labs/fiff"
  },
  "license": "MIT",
  "keywords": [
    "tiff",
    "ome-tiff",
    "zarr",
    "ome-zarr",
    "ngff",
    "zarrita",
    "geotiff",
    "bioimaging",
    "microscopy",
    "multiscale"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "bun test",
    "typecheck": "bun x tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "geotiff": "^3.0.3",
    "pako": "^2.1.0",
    "zarrita": "^0.6.1"
  },
  "peerDependencies": {
    "@fideus-labs/ngff-zarr": "^0.12.0",
    "@fideus-labs/worker-pool": "^1.0.0"
  },
  "peerDependenciesMeta": {
    "@fideus-labs/ngff-zarr": {
      "optional": true
    },
    "@fideus-labs/worker-pool": {
      "optional": true
    }
  },
  "devDependencies": {
    "@fideus-labs/ngff-zarr": "^0.12.0",
    "@types/bun": "^1.3.9",
    "@types/pako": "^2.0.4",
    "typescript": "^5.9.3"
  }
}
